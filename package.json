{
  "name": "static-starter",
  "version": "1.0.0",
  "description": "",
  "dependencies": {
    "vh-check": "^2.0.5"
  },
  "private": true,
  "repository": {
    "url": "https://github.com/jmegs/static-starter"
  },
  "devDependencies": {
    "@11ty/eleventy": "latest",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-nuke-dist": "^1.0.1",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "clean": "run-s clean:*",
    "clean:cache": "rimraf ./.cache",
    "clean:output": "rimraf ./_site",
    "build": "ELEVENTY_ENV=production run-s clean:* build:assets build:site",
    "build:site": "eleventy --config=eleventy.config.js",
    "build:assets": "parcel build ./src/assets/app.js ./src/assets/main.css --out-dir ./_site/assets --public-url=/assets/",
    "watch": "ELEVENTY_ENV=development run-s clean:* build:assets && run-p watch:*",
    "watch:site": "eleventy --serve --port=3000 --config=eleventy.config.js --quiet",
    "watch:assets": "parcel watch ./src/assets/app.js ./src/assets/main.css --out-dir ./_site/assets --public-url=/assets/ --no-hmr",
    "start": "npm run watch"
  },
  "author": "",
  "license": "ISC"
}
