{
  "license": "ISC",
  "browserslist": [
    ">1%",
    "not dead",
    "not ie 11",
    "not op_mini all"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "watch:site": "eleventy --config=eleventy.config.js --serve",
    "watch:assets": "parcel watch assets/js/main.js assets/css/main.scss -d dist/assets --no-hmr",
    "build:site": "eleventy --config=eleventy.config.js",
    "build:assets": "parcel build assets/js/main.js assets/css/main.scss -d dist/assets",
    "build": "NODE_ENV=production npm-run-all -l clean build:*",
    "dev": "NODE_ENV=development npm-run-all -l -c clean -p watch:*",
    "start": "yarn run dev"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "js-yaml": "^3.14.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "postcss-cli": "^7.1.1",
    "postcss-easy-import": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2",
    "sass": "^1.26.9"
  }
}
